<UserControl x:Class="Enla_C.VIEWS.aboutViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Enla_C.VIEWS"
             mc:Ignorable="d" 
             Background="White"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridAbout">
        <Grid VerticalAlignment="Center" 
              HorizontalAlignment="Center">
            <StackPanel>
                <Image Source="/assets/logo.png" Stretch="Uniform" Height="100"/>
                <Label FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center">
                    <Hyperlink NavigateUri="https://www.alfasystemas.com.mx"
                               RequestNavigate="Hyperlink_RequestNavigate"
                               TextDecorations="None">
                        ALFA SYSTEMAS
                    </Hyperlink>
                </Label>
                <Label FontSize="18" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center">
                    +52 (773) 129 0080
                </Label>

                <Separator Margin="0,5" BorderBrush="Black" BorderThickness="10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"
                           FontSize="18" 
                           VerticalAlignment="Center"
                           FontWeight="Bold" 
                           Margin="20,0"
                           HorizontalAlignment="Center">
                        <Hyperlink NavigateUri="https://www.alfasystemas.com.mx/helpdesk/"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   TextDecorations="None">
                            SOPORTE
                        </Hyperlink>
                    </Label>

                    <TextBlock Grid.Column="1" Grid.Row="0"
                               HorizontalAlignment="Center" 
                               Margin="20,0"
                               FontSize="18">
                        <Hyperlink NavigateUri="mailto:josue.leon@alfasystemas.com.mx"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   TextDecorations="None">
                            josue.leon@alfasystemas.com.mx
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="1" 
                               HorizontalAlignment="Center" 
                               FontSize="18">
                        <Hyperlink NavigateUri="mailto:software@alfasystemas.com.mx"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   TextDecorations="None">
                            software@alfasystemas.com.mx
                        </Hyperlink>
                    </TextBlock>
                </Grid>
                <Separator Margin="0,5" BorderBrush="Black" BorderThickness="10"/>
            </StackPanel>
        </Grid>
        
        <Grid VerticalAlignment="Bottom" 
              HorizontalAlignment="Left" Margin="20">
            <Label x:Name="labelVersion">
                Versión:
            </Label>
        </Grid>
    </Grid>
</UserControl>
