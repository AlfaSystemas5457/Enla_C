<UserControl x:Class="Enla_C.VIEWS.generatePolicesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Enla_C.VIEWS"
             mc:Ignorable="d"
             Background="White"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Padding="10">
        <StackPanel>
            <GroupBox Header="Tipo de operación" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <RadioButton x:Name="radioSalidaMaquila" 
                                 Content="Salida a maquila" 
                                 GroupName="OperacionTipo" 
                                 FontSize="18" 
                                 Margin="5,2" 
                                 VerticalAlignment="Center" 
                                 IsChecked="True" 
                                 Checked="radioSalidaMaquila_Checked"/>
                    <RadioButton x:Name="radioEntradaProcesado" 
                                 Content="Entrada de producto procesado" 
                                 GroupName="OperacionTipo" 
                                 FontSize="18" 
                                 Margin="5,2" 
                                 Checked="radioEntradaProcesado_Checked"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,0,0,10" 
                      Padding="10" 
                      FontSize="18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="95"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Fecha:
                        </Label>
                        <DatePicker Grid.Column="1" 
                                    Grid.Row="0" 
                                    VerticalAlignment="Center" 
                                    x:Name="datePickerFecha"
                                    Margin="5,0,5,0"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="180"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Almacén de origen:
                        </Label>
                        <TextBox Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="comboAlmacenOrigen" 
                                 FontSize="18" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid Grid.Column="0" Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="95"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Proveedor:</Label>
                        <ComboBox x:Name="comboProveedor"
                                  Grid.Column="1" Grid.Row="0"
                                  FontSize="18"
                                  HorizontalAlignment="Stretch"
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>

                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="180"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Almacén de destino:
                        </Label>
                        <TextBox Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="comboAlmacenDestino" 
                                 FontSize="18" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox Margin="0,0,0,10" 
                      Padding="10" 
                      FontSize="18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="90"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Producto:
                        </Label>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="0" 
                                  x:Name="comboProducto" 
                                  DisplayMemberPath="Nombre" 
                                  FontSize="18" 
                                  HorizontalAlignment="Stretch" 
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="90"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Cantidad:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxCantidad" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid x:Name="gridMateriaPrima" 
                          Visibility="Collapsed" 
                          Grid.Column="0" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="130"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Materia prima:
                        </Label>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="0" 
                                  x:Name="comboMateriaPrima" 
                                  DisplayMemberPath="Nombre" 
                                  FontSize="18" 
                                  HorizontalAlignment="Stretch" 
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>
                    </Grid>

                    <Grid x:Name="gridMerma" 
                          Visibility="Collapsed" 
                          Grid.Column="1" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Merma:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxMerma" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 Text="0.0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox x:Name="groupBoxCostosAdicionales" 
                      Visibility="Collapsed" 
                      Header="Costos Adicionales" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="120"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="18" 
                               Grid.Column="0" 
                               Grid.Row="0">
                            Adicional 1 $:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAdicional1" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="120"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="18" 
                               Grid.Column="0" 
                               Grid.Row="0">
                            Adicional 2 $:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAdicional2" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <Grid HorizontalAlignment="Left">
                <Button FontSize="20" 
                        Content="Aceptar" 
                        Padding="10" 
                        Margin="10"
                        x:Name="buttonAcceptGeneratePolicies"
                        Click="buttonAcceptGeneratePolicies_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
