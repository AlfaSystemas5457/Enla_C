<UserControl x:Class="Enla_C.VIEWS.generatePolicesControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Enla_C.VIEWS"
             mc:Ignorable="d"
             Background="White"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="RadioButton" 
               x:Key="CustomRadioButtonStyle">
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="BorderBrush" 
                    Value="#444"/>
            <Setter Property="BorderThickness" 
                    Value="1"/>
            <Setter Property="Padding" 
                    Value="4,2"/>
            <Setter Property="Margin" 
                    Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="BackRadio"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Width="Auto" Height="Auto"
                                    Background="#fff"
                                    CornerRadius="10"/>

                            <Border x:Name="Circle"
                                    Grid.Column="0"
                                    Width="16" Height="16"
                                    CornerRadius="8"
                                    Margin="6,2,2,2"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    VerticalAlignment="Center">
                                <Ellipse x:Name="Dot"
                                         Width="10" Height="10"
                                         Fill="Transparent"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              Grid.Column="1"
                                              Margin="2,2,6,2"
                                              VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" 
                                     Value="True">
                                <Setter TargetName="Dot" 
                                        Property="Fill" 
                                        Value="#007ACC"/>
                                <Setter TargetName="BackRadio" 
                                        Property="Background" 
                                        Value="#d7edfc"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="Circle" 
                                        Property="BorderBrush" 
                                        Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Padding="10"> 
        <StackPanel>
            <GroupBox Header="Tipo de operación" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <RadioButton x:Name="radioSalidaMaquila" 
                                 Content="Salida a maquila" 
                                 GroupName="OperacionTipo" 
                                 FontSize="18" 
                                 Margin="5,2" 
                                 VerticalAlignment="Center" 
                                 IsChecked="True" 
                                 Style="{StaticResource CustomRadioButtonStyle}"
                                 Checked="radioSalidaMaquila_Checked"/>
                    <RadioButton x:Name="radioEntradaProcesado" 
                                 Content="Entrada de producto procesado" 
                                 GroupName="OperacionTipo" 
                                 FontSize="18" 
                                 Margin="5,2" 
                                 Style="{StaticResource CustomRadioButtonStyle}"
                                 Checked="radioEntradaProcesado_Checked"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,0,0,10" 
                      Padding="10" 
                      FontSize="18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="95"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Fecha:
                        </Label>
                        <DatePicker Grid.Column="1" 
                                    Grid.Row="0" 
                                    VerticalAlignment="Center" 
                                    x:Name="datePickerFecha"
                                    Margin="5,0,5,0"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="180"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Almacén de origen:
                        </Label>
                        <TextBox Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="comboAlmacenOrigen" 
                                 FontSize="18" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid Grid.Column="0" Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="95"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" Grid.Row="0">Proveedor:</Label>
                        <ComboBox x:Name="comboProveedor"
                                  Grid.Column="1" Grid.Row="0"
                                  FontSize="18"
                                  HorizontalAlignment="Stretch"
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>

                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="180"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Almacén de destino:
                        </Label>
                        <TextBox Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="comboAlmacenDestino" 
                                 FontSize="18" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox Margin="0,0,0,10" 
                      Padding="10" 
                      FontSize="18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="90"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Producto:
                        </Label>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="0" 
                                  x:Name="comboProducto" 
                                  DisplayMemberPath="Nombre" 
                                  FontSize="18" 
                                  HorizontalAlignment="Stretch" 
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="90"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Cantidad:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxCantidad" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid x:Name="gridMateriaPrima" 
                          Visibility="Collapsed" 
                          Grid.Column="0" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="130"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Materia prima:
                        </Label>
                        <ComboBox Grid.Column="1" 
                                  Grid.Row="0" 
                                  x:Name="comboMateriaPrima" 
                                  DisplayMemberPath="Nombre" 
                                  FontSize="18" 
                                  HorizontalAlignment="Stretch" 
                                  Margin="5,0,5,0"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  StaysOpenOnEdit="True"/>
                    </Grid>

                    <Grid x:Name="gridMerma" 
                          Visibility="Collapsed" 
                          Grid.Column="1" 
                          Grid.Row="1" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0" 
                               Grid.Row="0">
                            Merma:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxMerma" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 Text="0.0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox x:Name="groupBoxCostosAdicionales" 
                      Visibility="Collapsed" 
                      Header="Costos Adicionales" 
                      Margin="0,0,0,10" 
                      Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="120"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="18" 
                               Grid.Column="0" 
                               Grid.Row="0">
                            Adicional 1 $:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAdicional1" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>

                    <Grid Grid.Column="1" 
                          Grid.Row="0" 
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" MinWidth="120"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="18" 
                               Grid.Column="0" 
                               Grid.Row="0">
                            Adicional 2 $:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAdicional2" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <Grid HorizontalAlignment="Left">
                <Button FontSize="20" 
                        Content="Aceptar" 
                        Padding="10" 
                        Margin="10"
                        x:Name="buttonAcceptGeneratePolicies"
                        Click="buttonAcceptGeneratePolicies_Click"
                        Cursor="Hand"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
