<UserControl x:Class="Enla_C.VIEWS.configViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Enla_C.VIEWS"
             mc:Ignorable="d"
             Background="White"
             Loaded="UserControl_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="SwitchCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border x:Name="SwitchTrack"
                                    Grid.Column="1"
                                    Width="60" Height="30"
                                    CornerRadius="15"
                                    Background="LightGray" />

                            <Ellipse x:Name="SwitchThumb"
                                     Grid.Column="1"
                                     Width="25" Height="25"
                                     Fill="White"
                                     Stroke="Black"
                                     StrokeThickness="1"
                                     Margin="0,0,30,0">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <ContentPresenter Grid.Column="0"
                                              x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Margin="{TemplateBinding Padding}" />

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="0"
                                                             Duration="0:0:0.2" />
                                            <ColorAnimation Storyboard.TargetName="SwitchTrack"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="LightGray"
                                                            Duration="0:0:0.2" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="30"
                                                             Duration="0:0:0.2" />
                                            <ColorAnimation Storyboard.TargetName="SwitchTrack"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="Green"
                                                            Duration="0:0:0.2" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>

                                <VisualStateGroup x:Name="EnabledStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="SwitchTrack"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="Gray"
                                                            Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="SwitchThumb"
                                                            Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                            To="LightGray"
                                                            Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>




    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Margin="0">
        <Grid x:Name="gridConfig" 
              Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" 
                                  MinWidth="150"
                                  MaxWidth="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Columna 0, Fila 0: configuración del servidor -->
            <GroupBox Grid.Column="0" 
                      Grid.Row="0" 
                      Header="Configuración del Seridor" 
                      Margin="10" 
                      Padding="10">
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" 
                                          MinWidth="160"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="0" 
                           VerticalAlignment="Center" 
                           Margin="0,5">
                        Razón social:
                    </Label>
                    <TextBox FontSize="18" 
                             Grid.Column="1" 
                             Grid.Row="0" 
                             x:Name="textBoxRS" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch"  
                             Margin="5,0,5,0"/>

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="1" 
                           VerticalAlignment="Center" 
                           Margin="0,5">
                        Servidor:
                    </Label>
                    <TextBox FontSize="18" 
                             Grid.Column="1" 
                             Grid.Row="1" 
                             x:Name="textBoxServer" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             Margin="5,0,5,0"/>

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="2" 
                           VerticalAlignment="Center" 
                           Margin="0,5">
                        DB ASPEL SAE:
                    </Label>
                    <TextBox FontSize="18"
                             Grid.Column="1" 
                             Grid.Row="2" 
                             x:Name="textBoxDBAspelSAE" 
                             VerticalAlignment="Center"  
                             Margin="5,0,5,0" />

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="3" 
                           VerticalAlignment="Center" 
                           Margin="0,5">
                        # de empresa SAE:
                    </Label>
                    <TextBox FontSize="18" 
                             Grid.Column="1" 
                             Grid.Row="3" 
                             x:Name="textBoxNoEmpresa" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch"  
                             Margin="5,0,5,0"/>

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="4" 
                           VerticalAlignment="Center" 
                           Margin="0,5"
                           >Usuario:
                    </Label>
                    <TextBox FontSize="18" 
                             Grid.Column="1" 
                             Grid.Row="4" 
                             x:Name="textBoxUser" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch"  
                             Margin="5,0,5,0"/>

                    <Label FontSize="18" 
                           Grid.Column="0" 
                           Grid.Row="5" 
                           VerticalAlignment="Center" 
                           Margin="0,5">
                        Clave:
                    </Label>
                    <PasswordBox FontSize="18"
                                 Grid.Column="1" 
                                 Grid.Row="5" 
                                 x:Name="textBoxPass" 
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"  
                                 Margin="5,0,5,0"/>
                </Grid>
            </GroupBox>

            <!-- Columna 0, Fila 1: almacenes -->
            <StackPanel Grid.Column="0" 
                        Grid.Row="1">
                <GroupBox Header="Almacenes" 
                          Margin="10" 
                          Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label FontSize="18" 
                               Grid.Column="0" 
                               Grid.Row="0" 
                               VerticalAlignment="Center" 
                               Margin="0,5">
                            Almacén 1:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="1" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAlm1" 
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Margin="5,5"/>

                        <Label FontSize="18" 
                               Grid.Column="2" 
                               Grid.Row="0" 
                               VerticalAlignment="Center"
                               Margin="0,5">
                            Almacén 2:
                        </Label>
                        <TextBox FontSize="18" 
                                 Grid.Column="3" 
                                 Grid.Row="0" 
                                 x:Name="textBoxAlm2" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Stretch" 
                                 Margin="5,5"/>

                        <CheckBox Grid.Column="0" 
                                  Grid.Row="1" 
                                  Grid.ColumnSpan="2" 
                                  IsChecked="False"
                                  Style="{StaticResource SwitchCheckBoxStyle}"
                                  x:Name="checkBoxPermitirMateriaPrima"
                                  FontSize="18"
                                  Margin="5,10,5,0"
                                  Height="Auto">
                            <TextBlock Text="Permitir materia prima" TextWrapping="Wrap"/>
                        </CheckBox>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <!-- Columna 1, Fila 0 (y podría abarcar fila 1 si lo deseas) para el botón -->
            <StackPanel Grid.Column="1" 
                        Grid.Row="0" 
                        Grid.RowSpan="2"
                        Margin="10,20,10,10">
                <Button Content="Aceptar" 
                        Height="70" 
                        Margin="0,0,0,10"
                        FontSize="24" 
                        x:Name="buttonAccept" 
                        Click="buttonAccept_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>