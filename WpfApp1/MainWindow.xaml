<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Enla_C"
    xmlns:Properties="clr-namespace:Enla_C.Properties" 
    xmlns:views="clr-namespace:Enla_C.VIEWS"
    x:Class="Enla_C.MainWindow"
    mc:Ignorable="d"
    Title="Enla-C" 
    Height="500" 
    Width="950" 
    MinHeight="400"
    MinWidth="700" 
    WindowStartupLocation="CenterScreen" 
    ResizeMode="CanResize"
    WindowStyle="SingleBorderWindow"
    Closing="Window_Closing">
    <Grid>
        <StackPanel HorizontalAlignment="Left" 
                    Width="100">
            <Button x:Name="generate_policies" 
                    Click="generate_policies_Click" 
                    Margin="10,10,10,10" 
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/assets/generate_polices.png" 
                       Stretch="Uniform" />
            </Button>
            
            <Button x:Name="cancel_movs" 
                    Click="cancel_movs_Click" 
                    Margin="10,10,10,10" 
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/assets/cancel_mov.png" 
                       Stretch="Uniform" />
            </Button>
            
            <Button x:Name="config" 
                    Click="config_Click" 
                    Margin="10,10,10,10" 
                    BorderThickness="0"
                    Cursor="Hand">
                <Image Source="/assets/config.png" 
                       Stretch="Uniform" />
            </Button>
        </StackPanel>

        <views:aboutViewControl 
            Visibility="Visible" 
            Margin="100,0,0,0" 
            x:Name="aboutViewControl" />
        <views:configViewControl 
            Visibility="Collapsed" 
            Margin="100,0,0,0" 
            x:Name="configViewControl" />
        <views:generatePolicesControl 
            Visibility="Collapsed" 
            Margin="100,0,0,0" 
            x:Name="generatePolicesControl" />
        <views:cancelMovement 
            Visibility="Collapsed" 
            Margin="100,0,0,0" 
            x:Name="cancelMovs" />
    </Grid>
</Window>
